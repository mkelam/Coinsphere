# Coinsphere Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DB_PASSWORD=your-super-secure-database-password-change-me

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secure-jwt-secret-min-32-characters-change-me

# CoinGecko API
COINGECKO_API_KEY=your-coingecko-api-key-from-coingecko-com

# Frontend URLs (replace with your actual domain)
VITE_API_URL=https://api.your-domain.com/api/v1
VITE_WS_URL=wss://api.your-domain.com/api/v1/ws

# Optional: Set to 'true' if using a different domain for API
CORS_ORIGIN=https://your-domain.com

# Node Environment
NODE_ENV=production

# Port Configuration (usually don't need to change these)
BACKEND_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
