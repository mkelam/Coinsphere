# Coinsphere Backend - Production Environment
# Copy this file to .env on your production server and fill in the values

NODE_ENV=production
PORT=3001

# Database
DATABASE_URL=postgresql://coinsphere:YOUR_DB_PASSWORD@localhost:5432/coinsphere

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=GENERATE_NEW_SECRET_HERE
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# APIs
COINGECKO_API_KEY=your-coingecko-api-key-here

# Redis (optional)
REDIS_URL=redis://localhost:6379

# CORS (your domain)
CORS_ORIGIN=https://your-domain.com
