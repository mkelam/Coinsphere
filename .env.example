# Coinsphere Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
APP_NAME=Coinsphere
APP_URL=http://localhost:5173

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://coinsphere:password@localhost:5432/coinsphere_dev
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# EXTERNAL APIs
# ============================================

# CoinGecko (https://www.coingecko.com/en/api)
COINGECKO_API_KEY=your-coingecko-pro-api-key

# LunarCrush (https://lunarcrush.com/developers/api)
LUNARCRUSH_API_KEY=your-lunarcrush-api-key

# CryptoCompare (https://www.cryptocompare.com/cryptopian/api-keys)
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key

# ============================================
# PAYMENT PROCESSING
# ============================================

# Stripe (https://stripe.com)
STRIPE_SECRET_KEY=sk_test_51XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_51XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Stripe Price IDs (get from Stripe Dashboard)
STRIPE_PLUS_PRICE_ID=price_XXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PRO_PRICE_ID=price_XXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_POWER_TRADER_PRICE_ID=price_XXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================

# SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SENDGRID_FROM_EMAIL=alerts@coinsphere.io
SENDGRID_FROM_NAME=Coinsphere

# Twilio (https://www.twilio.com) - Optional, for SMS alerts
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15558675309

# Firebase Cloud Messaging (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry (https://sentry.io)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_ENVIRONMENT=development

# Mixpanel (https://mixpanel.com)
MIXPANEL_TOKEN=your-mixpanel-token

# PostHog (self-hosted or cloud)
POSTHOG_API_KEY=phc_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
POSTHOG_HOST=https://analytics.coinsphere.io

# ============================================
# AWS (Production)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=coinsphere-assets

# AWS Secrets Manager
AWS_SECRETS_MANAGER_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/xxxxxxxx

# ============================================
# ML SERVICE
# ============================================
ML_SERVICE_URL=http://localhost:8000
MODEL_VERSION=v1.0.0
TRAINING_BATCH_SIZE=32
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_WHALE_ALERTS=false
FEATURE_NEWS_FEED=false
FEATURE_SOCIAL_SENTIMENT=false

# ============================================
# DEVELOPMENT ONLY
# ============================================
DEBUG=false
LOG_LEVEL=info
MOCK_EXTERNAL_APIS=false
